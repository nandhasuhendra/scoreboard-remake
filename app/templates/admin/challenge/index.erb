<% tables = Terminal::Table.new do |table| %>
  <% table.headings = ['No', 'Category', 'Name', 'Description', 'Score', 'Real Flag', 'Token', 'Created at', 'Updated at'] %>
  <% @resources.each do |resource| %>
    <% table.add_row [resource.id.to_s.rjust(2, "0"), resource.category.category, resource.name, resource.description, resource.score, resource.real_flag, resource.token, resource.created_at, resource.updated_at] %>
  <% end %>
<% end %>

<%= tables %>
